{
    // general
    "window.restoreWindows": "none",
    "terminal.integrated.env.linux": { 
        "NO_TEMUX": "true"
    },

    // toolbars
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.visible": true,
    "workbench.editor.showTabs": false,
    "workbench.sideBar.location": "right",
    "explorer.openEditors.visible": 0,
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#090a17",
        "statusBar.noFolderBackground": "#090a17",
        "statusBar.debuggingBackground": "#090a17"
    },
    // editor settings
    "files.autoSave": "onWindowChange",
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,

    // theme
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Night Owl",

    // telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // vim
    "vim.leader": ",",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.visualstar": true,
    "vim.replaceWithRegister": true,
    "vim.useSystemClipboard": true,
    "vim.statusBarColorControl": true,
    "vim.hlsearch": true,
    "vim.statusBarColors.normal": "#090a17",
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-e>": false,
        "<C-n>": false,
        "<C-b>": false
    },
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },

    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "e"],
            "after": ["g", "h"]
        },
        {
            "before": ["<leader>", "d"],
            "commands": [
                "editor.action.peekDefinition"
            ]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [
                "editor.action.referenceSearch.trigger"
            ]
        },
        {
            "before": ["<leader>", "u"],
            "commands": [
                "references-view.find"
            ]
        },
        {
            "before": ["<leader>", "a"],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": ["<leader>", "r"],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": ["q"],
            "commands": [
                "editor.action.smartSelect.expand"
            ]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [
                "editor.action.smartSelect.shrink"
            ]
        }
        
        
    ],

    // git
    "gitlens.currentLine.enabled": false,
    "git.autofetch": true,
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,

    // autoclose tags
    "auto-close-tag.fullMode": true,

    // formatters
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Intelisense
    "solargraph.diagnostics": true,
    "solargraph.formatting": true,

    // docker
    "docker.containers.groupBy": "State",
    "docker.dockerComposeBuild": false,
    "remote.extensionKind": {
        "ms-azuretools.vscode-docker": "workspace"
    },
    
    //searching
    "search.maintainFileSearchCache": true,
    "search.runInExtensionHost": true,
    "folding": {
        "*": {
            "begin": "{{{",
            "end": "}}}"
        }
    },
    "vim.foldfix": true,
    "gitlens.views.repositories.location": "scm"
}